{
    "train_micro_batch_size_per_gpu":1,
    "fp16": {
        "enabled": true,
        "initial_scale_power": 12,
        "loss_scale_window": 1000,
        "hysteresis": 2,
        "min_loss_scale": 1
    },
    "zero_optimization": {
      "stage": 2,
      "cpu_offload": true,
      "cpu_offload_params" : false,
      "contiguous_gradients": true
    },
    "optimizer": {
      "type": "AdamW",
      "params": {
        "lr": 5e-5,
        "betas": [
          0.9,
          0.999
        ],
        "eps": 1e-6
      }
    }
}